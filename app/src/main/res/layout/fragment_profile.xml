<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:padding="30dp"
    tools:context=".MainActivity"
    android:orientation="vertical">
   <!-- <com.google.android.gms.plus.PlusOneButton xmlns:plus="http://schemas.android.com/apk/lib/com.google.android.gms.plus"
        android:id="@+id/plus_one_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        plus:annotation="inline"
        plus:size="standard" />-->

   <ImageView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:src="@drawable/deal"/>
   <EditText
       android:id="@+id/user_email"
       android:layout_width="match_parent"
       android:layout_height="40dp"
       android:layout_marginTop="15dp"
       android:hint="Enter Your Email"
       android:drawablePadding="7dp"
       android:inputType="textWebEmailAddress"
       android:drawableLeft="@drawable/user_email3"
       android:background="@drawable/input_field"/>
   <EditText
       android:id="@+id/user_password"
       android:layout_width="match_parent"
       android:layout_height="40dp"
       android:layout_marginTop="15dp"
       android:inputType="textPassword"
       android:hint="Enter Your Password"
       android:drawablePadding="7dp"
       android:drawableLeft="@drawable/password"
       android:background="@drawable/input_field"/>

   <Button
       android:id="@+id/user_login"
       android:layout_width="match_parent"
       android:layout_height="46dp"
       android:layout_marginTop="15dp"
       android:textColor="#2e118b"
       android:drawableLeft="@drawable/login"
       android:background="@drawable/input_field"
       android:text="Login"
       android:textSize="20sp"/>
   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="15dp"
       android:gravity="center"
       android:text="No Account Yet ? Then Sign Up"
       android:textColor="#2e118b"
       android:textSize="18sp"/>
   <Button
       android:id="@+id/user_signup"
       android:layout_width="match_parent"
       android:layout_height="46dp"
       android:layout_marginTop="15dp"
       android:textColor="#2e118b"
       android:drawableLeft="@drawable/signup"
       android:background="@drawable/input_field"
       android:text="Sign Up"
       android:textSize="20sp"/>

</LinearLayout>
