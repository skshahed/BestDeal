<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:padding="30dp"
    android:background="@drawable/bg3"
    android:orientation="vertical"
    tools:context="com.example.forever.bestdeal.UserProfile.SignUpActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/signup_user"/>
    <EditText
        android:id="@+id/userFullNameET"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:hint="Enter Your Full Name"
        android:textColorHint="#0e8f80"
        android:drawablePadding="7dp"
        android:drawableLeft="@drawable/user_name"
        android:background="@drawable/input_field"/>
    <EditText
        android:id="@+id/userSignupEmailET"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:hint="Enter Your Email"
        android:textColorHint="#0e8f80"
        android:drawablePadding="7dp"
        android:inputType="textWebEmailAddress"
        android:drawableLeft="@drawable/user_email3"
        android:background="@drawable/input_field"/>
    <EditText
        android:id="@+id/userPasswordET"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:hint="Enter Your Password"
        android:inputType="textPassword"
        android:textColorHint="#0e8f80"
        android:drawablePadding="7dp"
        android:drawableLeft="@drawable/password"
        android:background="@drawable/input_field"/>

    <EditText
        android:id="@+id/userPhoneNumberET"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:hint="Enter Your Mobile Number"
        android:inputType="phone"
        android:textColorHint="#0e8f80"
        android:drawablePadding="7dp"
        android:drawableLeft="@drawable/user_phone"
        android:background="@drawable/input_field"/>
    <Button
        android:id="@+id/user_registration"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="15dp"
        android:textColor="#2e118b"
        android:drawableLeft="@drawable/signup"
        android:background="@drawable/input_field"
        android:text="Sign Up"
        android:textSize="20sp"
        android:onClick="signUpProcess"/>

</LinearLayout>
